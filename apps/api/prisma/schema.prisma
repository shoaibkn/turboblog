generator client {
  provider        = "prisma-client"
  output     = "./generated"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum AuthorType {
  ANONYMOUS
  REGISTERED
}

model User {
  id           String    @id @default(cuid())
  username     String    @unique
  email        String    @unique
  passwordHash String?
  isAdmin      Boolean   @default(false)
  createdAt    DateTime  @default(now())
  posts        Post[]
  comments     Comment[]
  @@index([email])
}

model Board {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  posts       Post[]
}

model Post {
  id         String     @id @default(cuid())
  title      String
  content    String
  authorType AuthorType
  authorId   String?
  authorIp   String?
  image      String?
  createdAt  DateTime   @default(now())
  boardId    String
  board      Board      @relation(fields: [boardId], references: [id], onDelete: Cascade)
  userId     String?
  user       User?      @relation(fields: [userId], references: [id], onDelete: SetNull)
  comments   Comment[]
  @@index([boardId])
  @@index([createdAt])
}

model Comment {
  id         String     @id @default(cuid())
  content    String
  authorType AuthorType
  authorId   String?
  authorIp   String?
  createdAt  DateTime   @default(now())
  postId     String
  post       Post       @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId     String?
  user       User?      @relation(fields: [userId], references: [id], onDelete: SetNull)
  parentId   String?
  parent     Comment?   @relation("Replies", fields: [parentId], references: [id], onDelete: Cascade)
  replies    Comment[]  @relation("Replies")
  @@index([postId])
}

model Session {
  id        String   @id @default(cuid())
  sessionId String   @unique
  ipAddress String
  createdAt DateTime @default(now())
  lastSeen  DateTime @default(now())
  @@index([sessionId])
}
